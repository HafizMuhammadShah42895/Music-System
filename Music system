	int buying;
	char upd[2]={'y','n'};
		int i=total;
          system("CLS");
          cout<<"\n\n\t\t SEARCH ISLE NUMBER YOU WANT TO BUY\n\n"<<endl;
          cout<<"----------------------------------------------------------------"<<endl<<endl;
          fstream file;
          	int islenum,found=0;
          file.open("NEW RECORD.txt",ios::in);
          if(!file){
          	cout<<"FILE NOT FOUND"<<endl<<endl;
		  }
		  else{
		  	cout<<"\n\nENTER ISLE NUMBER FOR SEARCH FROM (1 to 20) --->    ";
		  	cin>>islenum;
		  	if(islenum!=e[i].isle){
			  
		  	file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;
	while(!file.eof()){
		if(islenum == e[i].isle){
		system("CLS");
		cout<<"\n\n\t\t SEARCHED RECORD BELOW  "<<endl;
		cout<<"GENRE :  "<<e[i].genre<<endl<<endl;
		cout<<"ARTIST NAME  :  "<<e[i].artist<<endl<<endl;
