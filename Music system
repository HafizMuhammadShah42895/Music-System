					else if(pop[2] == 'n'){
						cout<<"\n\n"<<endl;
		    			cout<<"ITS FINE IF ITS NOT YOUR TYPE. LETS ROLL BACK"<<endl<<endl;
		    			system("pause");
		    			system("CLS");
		    			goto pop;
				}
			
				
			}	else {
					
		cout<<"\n\n"<<endl<<endl;
	cout<<"ERROR DETECTED LETS ROLL BACK"<<endl; 
	system("pause");
	system("CLS");
	goto pop;			
		}
		break;	
		
		   default:			
		cout<<"\n\n"<<endl<<endl;
	cout<<"ERROR DETECTED LETS ROLL BACK"<<endl<<endl;   
	system("pause");
	system("CLS");
	goto pop;
	
				
	}	
	
	
