	else if(upd[2]=='n'){
		cout<<"\n\n\n\t\tITS FINE YOU CAN FIND ANOTHER ALBUM....."<<endl<<endl;
	    	
	}}
	else if(islenum==e[i].isle){
		cout<<"NOTHING ON THIS ISLE KINDLY TRY AGAIN..."<<endl<<endl;
	}
	file.close();
	system("pause");
	system("CLS");
		  	 }
           }  
		    
