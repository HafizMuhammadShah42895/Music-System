void addmusic(){                             //function to add music in admin menu

	int choice;                               
	cout<<"HOW MUCH NEW DATA YOU WANT TO ADD?"<<endl<<endl;   //asking for how many pieces of datas are wanted to be added
	cin>>choice;                                                      //entering the choice
	system("pause");                                              //system pause function
	system("CLS");                                         //clear screen function
	fstream file;                                                     //using fstream for both reading and writing files
	for(int i=total; i<total+choice; i++ ){                           //using for loop to run it again and again
		cout<<"ENTERING THE DATA OF ARTIST/s "<<i+1<<endl<<endl;
		cout<<"ENTER GENRE NAME :"<<endl<<endl;
		cin>>e[i].genre;                                                 //using structure to add genre name
		cout<<"ENTER ARTIST NAME :"<<endl<<endl;
		cin>>e[i].artist;                                                 //structure to add artist name
		cout<<"ENTER THE ALBUM NAME :"<<endl<<endl;
		cin>>e[i].albumname;                                              //structure to add albumname
		cout<<"ENTER THE TRACK NUMBERS : "<<endl<<endl;
		cin>>e[i].tracklist;                                             //structure to add tracklist
		cout<<"ENTER THE METRIC SCORE FOR ALBUM  :  "<<endl<<endl;
		cin>>e[i].metricscore;                                           //structure to add metricscore
		cout<<"ENTER THE PRICE FOR ALBUM  :  "<<endl<<endl;
		cin>>e[i].price;                                                  //structure to add price
		cout<<"ENTER THE ISLE NUMBER : "<<endl<<endl;
		cin>>e[i].isle;                                                  //structure to add isle number
		
			file.open("NEW RECORD.txt", ios::app | ios::out);                //opening file to write data using append mode
file<< "  "<< e[i].genre <<"  "<<e[i].artist<<"  "<<e[i].albumname<<"  "<<e[i].tracklist<<"  "<<e[i].metricscore<<"  "<<e[i].price<<"  "<<e[i].isle<< "  \n\n";
//writing data on the file as a pattern
	file.close();
	//closed the file for good
	
	}
	total=total+choice;                  //condition for ,for loop
system("pause");
system("CLS");
}

void displayinfo(){                                       //function to display all data recorded
system("CLS"); 
int i=total;                                             //initializing as total
fstream file;                                            //using fstream for both reading and writing and initializing file
cout<<"\t\t\t\nDISPLAY RECORD"<<endl<<endl;
cout<<"---------------------------------------------------------------------"<<endl<<endl;
file.open("NEW RECORD.txt",ios::in);              //opening file named NEW RECORD.txt
file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;  //fetching data from the file created above
	while(!file.eof()){            //using while function and giving condition for if not end of file
		cout<<"GENRE :  "<<e[i].genre<<endl<<endl;                    //structure for genre
		cout<<"ARTIST NAME  :  "<<e[i].artist<<endl<<endl;                 //struture for artist name
		cout<<"ALBUM NAME  :  "<<e[i].albumname<<endl<<endl;                //structure for album name 
		cout<<"TRACK LIST  :  "<<e[i].tracklist<<endl<<endl;                 //structure for tracklist
		cout<<"METRIC SCORE  :  "<<e[i].metricscore<<endl<<endl;         //structure for metric score
		cout<<"PRICE   :  "<<e[i].price<<endl<<endl;                      //struccture for the price
		cout<<"ISLE NUMBER  :  "<<e[i].isle<<endl<<endl;                   //structure data for isle number
		cout<<"----------------------------------------------------------------------------"<<endl<<endl;
		file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;  //fetching data
	}
	file.close();                                                  //closing file NEW RECORD.txt
	system("pause");                                                
	system("CLS");
}

void search(){                                      //function for searching record
	int i=total;                                                                   
          system("CLS");
          cout<<"\n\n\t\t SEARCH RECORD\n\n"<<endl;
          cout<<"----------------------------------------------------------------"<<endl<<endl;
          fstream file;                                //using fstream for both reading and writing
          	int islenum,found=0;                              //creating 2 variables
          file.open("NEW RECORD.txt",ios::in);                //opening our created file and to fetch ios::in
          if(!file){                                          //condition if file isnt present
          	cout<<"FILE NOT FOUND"<<endl<<endl;             //file not found
		  }
		  else{
		  	cout<<"\n\nENTER ISLE NUMBER FOR SEARCH --->    ";
		  	cin>>islenum;
		  	file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;
		  	//again fetching data from opened file
	while(!file.eof()){                                          //using same while loop and same condition
		if(islenum == e[i].isle){                               //condition if given variable is equal to the isle number saved in structure 
		system("CLS");
		cout<<"\n\n\t\t SEARCHED RECORD BELOW  "<<endl;
		cout<<"GENRE :  "<<e[i].genre<<endl<<endl;                      //structure data for genre
		cout<<"ARTIST NAME  :  "<<e[i].artist<<endl<<endl;                //structure data for artist name
		cout<<"ALBUM NAME  :  "<<e[i].albumname<<endl<<endl;             //structure data for albumname
		cout<<"TRACK LIST  :  "<<e[i].tracklist<<endl<<endl;            //structure data for track list
		cout<<"METRIC SCORE  :  "<<e[i].metricscore<<endl<<endl;         //structure data for metric score
		cout<<"ISLE NUMBER  :  "<<e[i].isle<<endl<<endl;                   //structure data for isle number
		cout<<"----------------------------------------------------------------------------"<<endl<<endl;
		found++;      //incrementing }
		file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;    //fetching data from our opened file
	}
	file.close();                                  //closing the file
	system("pause");
	system("CLS");
		  	 }
			   }
		}
		  

void deleteinfo(){
system("CLS");
int i=total;
int del_id,found=0;
fstream file,file1;
cout<<"\n\n\t\t DELETE RECORD  "<<endl<<endl;
cout<<"--------------------------------------------------------------"<<endl<<endl;
file.open("NEW RECORD.txt",ios::in);
if(!file){
	cout<<"\n\n\t\t FILE NOt FOUND..."<<endl<<endl;
	getch();
}
else {
     cout<<"ENTER ISlE NUMBER TO DELETE DATA.."<<endl<<endl;
     cin>>del_id;
     file1.open("NEW RECORD1.txt",ios::app | ios::out);
     file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;
     while(!file.eof()){
     	if(del_id==e[i].isle){
     		cout<<"RECORD DELETED SUCCESSFULLY..."<<endl<<endl;
     		
     		found++;
		 }
		 else{
		 	file1<< "  "<< e[i].genre <<"  "<<e[i].artist<<"  "<<e[i].albumname<<"  "<<e[i].tracklist<<"  "<<e[i].metricscore<<"  "<<e[i].price<<"  "<<e[i].isle<< "  \n\n";
		 }
		 file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;
	 }
   	file.close();
   	file1.close();
   	remove("NEW RECORD.txt");
   	rename("NEW RECORD1.txt","NEW RECORD.txt");
   	
   }
}


