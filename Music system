		cout<<"ISLE NUMBER  :  "<<e[i].isle<<endl<<endl;
		cout<<"----------------------------------------------------------------------------"<<endl<<endl;
		found++;}
		file>>e[i].genre>>e[i].artist>>e[i].albumname>>e[i].tracklist>>e[i].metricscore>>e[i].price>>e[i].isle;
	}
	cout<<"--------------------------------------------------------------------------------------"<<endl<<endl;
	
	cout<<"IF YOU WANT TO BUY "<<islenum<<"  PRESS 'y' IF NOT PRESS 'n'  "<<endl<<endl;
	cin>>upd[2];
